{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "target": "es2020", // or higher
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules"]
}
